<div class="devise-edit">
  <h2>ユーザー情報編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ニックネーム %><em>(8文字以内)</em><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", maxlength: 8, size: "30" %>
    </div>

    <div class="field">
      <%= f.label :プロフィール %><br />
      <%= f.text_area :profile, autofocus: true, autocomplete: "profile", maxlength: 200, size: "30 x 5"  %>
    </div>

    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.file_field :image, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :パスワード変更 %> <i>(現在のパスワードを入力して下さい)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以内</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(変更を反映するために必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
  <% end %>

  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  <%= link_to "戻る", :back %>
</div>
