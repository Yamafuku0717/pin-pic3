<%= form_with(model: [@picture, @link], class: 'memo-form', id: 'form-field', local: true) do |f| %>
  <div class="form-input">
    <%= f.text_area :info, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, placeholder: 'Image url' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
